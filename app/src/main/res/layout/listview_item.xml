<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/datamember"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tx_nameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="Full Name Of Contact"
        android:textColor="@color/Bg_Text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_angkatanVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="Angkatan"
        android:textColor="@color/univmember"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_universityVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:text="University"
        android:textColor="@color/univmember"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_phoneView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="08080808080"
        android:textAlignment="viewStart"
        android:textColor="@color/phonemember"
        android:textSize="14sp" />

</LinearLayout>